class StepValueError(ValueError):
    pass
    
    
class Iterator:
    
    def __init__(self, start, stop, step=1):
        self.start = start
        self.stop = stop
        if self.step == 0:
            raise StepValueError('шаг не может быть равен 0')
            
    def __iter__(self):
        self.pointer == self.start
        
    def __next__(self):
        self.pointer += self.step
        if self.pointer >= self.stop:
            raise StopIteration()
